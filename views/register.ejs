<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('common/head'); -%>
</head>

<style>
    .auth-color{
        background-color: black;
        color: aqua;
    }

    @media screen and (max-width: 749px){

     .main-menu ul>li a{
    
         font-size: 10px;

     }

    }
</style>

<body class="main-layout contineer_page">
  <!-- loader  -->
  
  <!-- end loader -->
  <!-- header -->
  <header>
    <!-- header inner -->

    <%- include('common/header'); -%>
    <!-- end header inner -->

    <!-- end header -->


  </header>

  <div class="backgro_mh">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="heding">
            <h2>Register to buy Song</h2>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <% if (errors.message) { %>
          <p class="mt-2 text-center text-sm text-red-600">
            Error: <%= errors.message %>
          </p>
        <% } %>
        <form class="contact_bg" id="test" action="/register" method="post">
          <div class="row">
            <div class="col-md-12">
              <div class="col-md-12">
                <input class="contactus" placeholder="Username" type="text" name="username">
              </div>
              <div class="col-md-12">
                <input class="contactus" placeholder="Password" type="text" name="password">
              </div>
              <div class="col-md-12">
                <input class="contactus" placeholder="confirm Password" type="text" name="confirm_password">
              </div>
               <div class="col-md-12">
                <input class="contactus" placeholder="Deposit amount" type="number" name="balance" min="0">
              </div>
              <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                <button class="btn btn-outline-primary" type="submit" id="submit" >register</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

   <!--  footer -->
   <%- include('common/footer'); -%>
   <!-- end footer -->
  









</body>

</html>